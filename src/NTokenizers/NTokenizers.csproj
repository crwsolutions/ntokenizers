<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
		<LangVersion>latest</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>true</IsPackable>

		<!-- NuGet package metadata -->
		<PackageId>NTokenizers</PackageId>
		<VersionSuffix Condition="'$(VersionSuffix)' == ''">preview</VersionSuffix>
		<Version>2.0</Version>
		<Authors>crwsolutions</Authors>
		<Copyright>(c) crwsolutions</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Description>Collection of stream-capable tokenizers for XML, JSON, YAML, Markdown, TypeScript, C# and SQL processing. See README for usage and details.</Description>
		<PackageDescription>Collection of stream-capable tokenizers for XML, JSON, YAML, Markdown, TypeScript, C# and SQL processing. See README for usage and details.</PackageDescription>
		<PackageTags>tokenizer;xml;json;yaml;md;markdown;typescript;c#;csharp;sql; stream;parsing;dotnet</PackageTags>
		<RepositoryUrl>https://github.com/crwsolutions/ntokenizers</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageProjectUrl>https://crwsolutions.github.io/ntokenizers</PackageProjectUrl>
		<Title>NTokenizers</Title>
		<PackageReleaseNotes>Breaking: markup was renamed to markdown, added yaml</PackageReleaseNotes>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
